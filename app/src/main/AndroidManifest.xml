<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.mark.frame">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 用于读取手机当前的状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入缓存定位数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <!-- 以下是使用wifi访问网络所需的权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <!--相机权限-->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!--指纹识别-->
    <uses-permission android:name="com.fingerprints.service.ACCESS_FINGERPRINT_MANAGER"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>

    <application
        android:name=".system.FrameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyStyle">

        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.UpdateApkActivity">
            <!--  <intent-filter>
                  <action android:name="android.intent.action.MAIN" />
                  <category android:name="android.intent.category.LAUNCHER" />
              </intent-filter>-->
        </activity>
        <!--<activity android:name=".ui.RegiestActivity" />-->
        <activity android:name=".ui.activity.PhotoViewActivity"/>
        <activity android:name=".ui.activity.ColorStatusBarActivity"/>
        <activity android:name=".ui.activity.ImageStatusBarActivity"/>
        <activity android:name=".ui.activity.SwipeBackActivity"/>
        <activity android:name=".ui.activity.UseInFragmentActivity"/>
        <activity android:name=".ui.activity.ImageViewActivity"/>
        <activity android:name=".ui.activity.ApiActivity"/>
        <activity android:name=".ui.activity.AutoTinyActivity"/>
        <activity android:name=".ui.activity.ListViewActivity"/>
        <activity android:name=".ui.activity.PlayDirectlyActivity"/>
        <activity android:name=".ui.activity.WebViewActivity"/>
        <activity android:name=".ui.activity.OrientationActivity"/>
        <activity android:name=".ui.activity.UISmallChangeActivity"/>
        <activity android:name=".ui.activity.AutoTinyListActivity"/>
        <activity android:name=".ui.activity.AutoTinyNormalActivity"/>
        <activity android:name=".ui.activity.ListViewMultiHolderActivity"/>
        <activity android:name=".ui.activity.ListViewNormalActivity"/>
        <activity android:name=".ui.activity.ListViewViewpagerActivity"/>
        <activity android:name=".ui.activity.RecyclerViewNormalActivity"/>
        <activity android:name=".ui.activity.StatusBarActivty"/>

        <meta-data
            android:name="design_width"
            android:value="720"/>
        <meta-data
            android:name="design_height"
            android:value="1280"/>
    </application>

</manifest>