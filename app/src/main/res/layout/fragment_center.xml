<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/white"
                  android:orientation="vertical">

        <Button
            android:id="@+id/status_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status_bar"/>

        <Button
            android:id="@+id/chart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="chart_bar"/>

        <Button
            android:id="@+id/top_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tab_Order"/>

        <Button
            android:id="@+id/big_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示大图"/>

        <Button
            android:id="@+id/show_material_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show material search view"/>

        <Button
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义webview实现多种功能"/>
    </LinearLayout>
</layout>